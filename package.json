{
  "name": "client-certificate-auth",
  "version": "1.0.0",
  "description": "Middleware for Node.js implementing client SSL certificate authentication/authorization",
  "homepage": "https://github.com/tgies/client-certificate-auth",
  "bugs": {
    "url": "https://github.com/tgies/client-certificate-auth/issues"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/tgies"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/clientCertificateAuth.d.ts",
        "default": "./lib/clientCertificateAuth.js"
      },
      "require": {
        "types": "./lib/clientCertificateAuth.d.cts",
        "default": "./lib/clientCertificateAuth.cjs"
      }
    },
    "./parsers": {
      "import": {
        "types": "./lib/parsers.d.ts",
        "default": "./lib/parsers.js"
      }
    },
    "./helpers": {
      "import": {
        "types": "./lib/helpers.d.ts",
        "default": "./lib/helpers.js"
      }
    }
  },
  "main": "./lib/clientCertificateAuth.cjs",
  "types": "./lib/clientCertificateAuth.d.ts",
  "engines": {
    "node": ">= 18"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "c8": "^10.1.3",
    "eslint": "^9.17.0",
    "globals": "^17.0.0",
    "jest": "^29.7.0",
    "selfsigned": "^5.4.0",
    "typescript": "^5.7.2"
  },
  "directories": {
    "lib": "./lib",
    "test": "./test"
  },
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathIgnorePatterns=test-e2e",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --testPathIgnorePatterns=test-e2e",
    "test:e2e": "node --experimental-vm-modules node_modules/jest/bin/jest.js test/test-e2e-proxies.js --runInBand",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir lib",
    "check": "npm run lint && npm run typecheck && npm run test:coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tgies/client-certificate-auth.git"
  },
  "keywords": [
    "authentication",
    "ssl",
    "tls",
    "mtls",
    "client-certificate",
    "express",
    "connect",
    "middleware"
  ],
  "author": "Tony Gies <tony.gies@gruppe86.net> (https://github.com/tgies)",
  "license": "MIT",
  "files": [
    "lib/**/*.js",
    "lib/**/*.cjs",
    "lib/**/*.d.ts",
    "lib/**/*.d.cts"
  ]
}