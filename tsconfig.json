{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "noEmit": true,
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "declarationMap": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "lib/**/*.js",
        "lib/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "test"
    ]
}